<Page x:Class="Airport.sign_upxaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airport"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="sign_upxaml" Background="Beige">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Label Content="Sign Up" FontSize="45" FontWeight="Bold" Margin="304,51,304,25" Grid.Row="0"/>
        <Label Content="Username :" Style="{StaticResource ABDO}" Margin="28,5,630,80" Grid.Row="1" />
        <Label Content="Password :" Style="{StaticResource ABDO}" Margin="37,70,625,35" Grid.Row="1" />

        <TextBox Width="450" Style="{StaticResource text}" Margin="175,10,175,88" Name="username" Grid.Row="1"/>
        <TextBox Width="450" Style="{StaticResource text}" Margin="175,75,175,30" Name="password" Grid.Row="1"/>
        <Button Content="Sign Up" Style="{StaticResource but}" Margin="350,10,350,105" Click="Button_Click" Grid.Row="2"/>

    </Grid>
</Page>
