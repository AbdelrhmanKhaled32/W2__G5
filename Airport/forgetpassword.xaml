<Page x:Class="Airport.forgetpassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airport"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="forgetpassword" Background="Beige" Width="850">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Label Content="Forget Password" FontSize="45" FontWeight="Bold" Margin="218,51,274,26" Grid.Row="0" />
        <Label Content="Username :" Style="{StaticResource ABDO}" Margin="78,5,580,55" Grid.Row="1" />
        <Label Content="Password :" Style="{StaticResource ABDO}" Margin="89,70,575,10" Grid.Row="1" />

        <TextBox Margin="250,38,250,88" Name="username" Grid.Row="1" Style="{StaticResource text}"/>
        <TextBox Margin="250,92,250,32" Name="password" Grid.Row="1" Style="{StaticResource text}"/>
        <Button Content="Submit" Style="{StaticResource but}" Margin="347,10,403,105" Click="Button_Click_1" Grid.Row="2" />

    </Grid>
</Page>
