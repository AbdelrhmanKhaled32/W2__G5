<Page x:Class="Airport.forgetpassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airport"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="forgetpassword" Background="Beige">
    <Grid>
        <Label Content="Forget Password" FontSize="45" FontWeight="Bold" Margin="218,51,218,328" />
        <Label Content="Username :" Style="{StaticResource ABDO}" Margin="28,155,630,245" />
        <Label Content="Password :" Style="{StaticResource ABDO}" Margin="35,220,625,180" />

        <TextBox Height="40" Width="450" Margin="175,160,175,250" Name="username"></TextBox>
        <TextBox Height="40" Width="450" Margin="175,225,175,185" Name="password"></TextBox>
        <Button Content="Submit" Style="{StaticResource but}" Margin="350,304,350,111" Click="Button_Click_1"/>

    </Grid>
</Page>
